<div class="px-6 py-4 bg-gray-50 border-b border-gray-200">
  <%= form_tag web_sync_log_path, method: :get, class: "flex gap-4 items-end" do %>
    <div>
      <label class="block text-sm font-medium text-gray-700 mb-1">Message</label>
      <%= text_field_tag :message, params[:message],
                         class: "block w-full rounded-md bg-white py-2 pl-3 pr-3 text-gray-900 ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm sm:leading-6",
                         placeholder: "Search in error message..." %>
    </div>

    <div>
      <label class="block text-sm font-medium text-gray-700 mb-1">House Code</label>
      <%= text_field_tag :item_id, params[:item_id],
                         class: "block w-full rounded-md bg-white py-2 pl-3 pr-3 text-gray-900 ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm sm:leading-6",
                         placeholder: "Filter by item ID..." %>
    </div>

    <%= submit_tag "Filter", class: "bg-blue-600 px-4 py-2 text-sm text-white font-medium rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>

    <% if params[:message].present? || params[:item_id].present? %>
      <%= link_to "Clear", web_sync_log_path,
                  class: "px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50" %>
    <% end %>
  <% end %>
</div>
